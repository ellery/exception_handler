<h1>Listing subjects</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>From</th>
      <th>Priority</th>
      <th>To</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.subject %></td>
        <td><%= subject.from %></td>
        <td><%= subject.priority %></td>
        <td><%= subject.to %></td>
        <td><%= subject.project %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

