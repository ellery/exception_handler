<%- model_class = Subject -%>
<div class="page-header">
  <h1><%=t '.title', :default => Subject %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:subject) %></dt>
      <dd><pre class="prettyprint"><%= @subject.subject %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:from) %></dt>
      <dd><pre class="prettyprint"><%= @subject.from %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:priority) %></dt>
      <dd><pre class="prettyprint"><%= @subject.priority %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:to) %></dt>
      <dd><pre class="prettyprint"><%= @subject.to %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              subjects_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_subject_path(@subject), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              subject_path(@subject),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

